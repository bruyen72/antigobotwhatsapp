{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/qr",
      "dest": "/api/qr"
    },
    {
      "src": "/pair",
      "dest": "/api/pair"
    },
    {
      "src": "/bot/(.*)",
      "dest": "/api/bot"
    },
    {
      "src": "/api",
      "dest": "/api/index"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
  }
}